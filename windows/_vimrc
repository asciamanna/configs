""""""""""""""""""""""""""""""""""""""""""""""""""""""""" 
"  Anthony Sciamanna (asciamanna@gmail.com)
" windows _vimrc
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""
set nocompatible
source $VIMRUNTIME/vimrc_example.vim

" don't source mswin.vim - changes vim behavior
" source $VIMRUNTIME/mswin.vim
behave mswin

" using pathogen for plugin management
" https://github.com/tpope/vim-pathogen
execute pathogen#infect()
set title
set tabstop=2 shiftwidth=2 softtabstop=2 expandtab
set showmode
set nu
set showmatch
set incsearch
set hlsearch
set ignorecase
set smartcase
set autoindent
set nobackup
set wildmenu
set showcmd
syntax enable
syntax on
filetype indent plugin on
set background=dark
colorscheme solarized
autocmd BufNewFlie,BufReadPost *.md set filetype=markdown
set noeb vb t_vb=
set nrformats=

if has('gui_running')
	set guioptions-=T
end
